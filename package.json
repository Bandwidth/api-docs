{
  "name": "external-api-docs",
  "version": "1.0.0",
  "description": "Handles Bandwidth's external API docs and OpenAPI specs",
  "dependencies": {
    "http-server": "^0.12.3"
  },
  "scripts": {
    "postman": "cd ./postman && npm install && npm run start -- -c ./resources/postman_scaffold_collection.json -s ../external/specs/",
    "generate": "cd ./sdk-generation && npm install && npm run build && npm run generate --",
    "generate-docsite-external": "cd ./docsite-generation && sh generate-external.sh",
    "generate-docsite-internal": "cd ./docsite-generation && sh generate-internal.sh",
    "docsite-server-external": "cd ./docsite-generation && sh generate-external.sh server",
    "docsite-server-internal": "cd ./docsite-generation && sh generate-internal.sh server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bandwidth/external-api-docs.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bandwidth/external-api-docs/issues"
  },
  "homepage": "https://github.com/Bandwidth/external-api-docs#readme"
}
