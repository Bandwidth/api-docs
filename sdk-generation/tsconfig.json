{
    "compilerOptions": {
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "lib": ["es6", "dom", "es2017"],
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "out",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "/*.ts"
    ]
}
